{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": ["discover", "-v", "-s", ".", "-p", "*_test.py"],
      "console": "integratedTerminal"
    }
  ]
}
